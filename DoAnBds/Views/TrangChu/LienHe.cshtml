@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DoAnBds.Models.Form
<div class="page-heading header-text">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <span class="breadcrumb"><a href="#">Trang Chủ </a>  /  Liên Hệ</span>
          <h3>Hãy Liên Hệ Với Chúng Tôi</h3>
        </div>
      </div>
    </div>
  </div>

  <div class="contact-page section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="section-heading">
            <h6>| Liên Hệ</h6>
                    <h2>Liên hệ với  chúng tôi</h2>
          </div>
                <p>
                    <
                    "Chào đồng hành cùng chúng tôi! Nếu bạn đang tìm kiếm giải pháp bất động sản hoàn hảo, hãy liên hệ ngay với chúng tôi. Chúng tôi sẵn sàng lắng nghe và hỗ trợ bạn đạt được mục tiêu của mình. Hãy bắt đầu cuộc hành trình mới ngay hôm nay!"/p>
          <div class="row">
            <div class="col-lg-12">
              <div class="item phone">
                <img src="assets/images/phone-icon.png" alt="" style="max-width: 52px;">
                <h6>010-020-0340<br><span>Phone Number</span></h6>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="item email">
                <img src="assets/images/email-icon.png" alt="" style="max-width: 52px;">
                <h6>info@villa.co<br><span>Business Email</span></h6>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
                <form id="contact-form" method="post" asp-controller="trangchu" asp-action="add">
            <div class="row">
              <div class="col-lg-12">
                <fieldset>
                  <label for="tem">Họ Tên</label>
                                <input type="text" name="ten" id="name" placeholder="Họ Tên" autocomplete="on" required asp-for="Ten">
                </fieldset>
              </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <label for="gmail">Địa Chỉ Gmail</label>
                                <input type="text" name="gmail" id="email" placeholder="Địa Chỉ Gmail" required="" asp-for="Gmail">
                            </fieldset>
                        </div>
              <div class="col-lg-12">
                <fieldset>
                  <label for="diachi">Địa Chỉ</label>
                                <input type="text" name="diachi" id="email" placeholder="Địa Chỉ" required="" asp-for="DiaChi">
                </fieldset>
              </div>
              <div class="col-lg-12">
                <fieldset>
                  <label for="sodienthoai">Số Điện Thoại</label>
                                <input type="number" name="sodienthoai" id="subject" placeholder="Số Điện Thoại" autocomplete="on" asp-for="SoDienThoai">
                </fieldset>
              </div>
              <div class="col-lg-12">
                <fieldset>
                  <label for="chude">Chủ Đề</label>
                                <input type="text" name="chude" id="subject" placeholder="Chủ Đề" autocomplete="on" asp-for="ChuDe">
                </fieldset>
              </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <label for="noidung">Nội Dung</label>
                                <textarea name="noidung" id="message" placeholder="Your Message" asp-for="NoiDung"></textarea>
                            </fieldset>
                        </div>
              <div class="col-lg-12">
                <fieldset>
                  <button type="submit" id="form-submit" class="orange-button">Send Message</button>
                </fieldset>
              </div>
            </div>
          </form>
        </div>
        <div class="col-lg-12">
          <div id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.460226342843!2d106.66478987481823!3d10.77601995920165!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f3ae5901877%3A0x42c37972de865906!2zODI4IMSQLiBTxrAgVuG6oW4gSOG6oW5oLCBQaMaw4budbmcgMTIsIFF14bqtbiAxMCwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1700320596097!5m2!1svi!2s" width="100%" height="500px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
        </div>
      </div>
    </div>
  </div>
