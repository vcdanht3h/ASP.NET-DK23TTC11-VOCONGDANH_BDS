@{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/css/stylelogin.css" rel="stylesheet" />
}
@model DoAnBds.Models.NhanVien
<br />
<table align="left" style="margin:0% 1%;">
    <tr>
        <td><a asp-controller="dashboard" asp-action="nhanvien" asp-area="admin"><img src="~/images/arrow.png" width="24" height="24" /></a></td>
    </tr>
</table>
<br />
<br />
<br />
<br />

<form class="kkk" align="center" method="post" asp-area="admin" asp-controller="dashboard" asp-action="addnhanvien">
    <h1 align="center" style="color:#003849;"><span>THÊM NHÂN VIÊN</span></h1>
    <div class="inset">
        <p>
            <label for="MaNv">Mã nhân viên</label>
            <input type="text" name="MaNv" id="MaNv" asp-for="MaNv">
        </p>
        <p>
            <label for="TenNv">Tên nhân viên</label>
            <input type="text" name="TenNv" id="TenNv" asp-for="TenNv">
        </p>
        <p>
            <label for="GioiTinh">Giới tính</label>
            <input type="text" name="GioiTinh" id="GioiTinh" asp-for="GioiTinh">
        </p>
        <p>
            <label for="MaQuyen">Mã Quyền</label>
            <input type="text" name="MaQuyen" id="MaQuyen" asp-for="MaQuyen">
        </p>
        <p>
            <label for="CaLamViec">Ca làm việc</label>
            <input type="text" name="CaLamViec" id="CaLamViec" asp-for="CaLamViec">
        </p>
        <p>
            <label for="MaBp">Mã bộ phận</label>
            <input type="text" name="MaBp" id="MaBp" asp-for="MaBp">
        </p>
      
    </div>
    <p class="p-container">
        <input type="submit" name="go" id="go" value="Xác nhận">
    </p>
</form>